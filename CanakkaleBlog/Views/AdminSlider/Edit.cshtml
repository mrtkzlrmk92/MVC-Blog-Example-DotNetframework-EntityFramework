@model CanakkaleBlog.Models.Slider
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Edit</h2>
<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body">
                            <h4 class="header-title">Slider Edit</h4>
                            <p class="sub-header">
                              
                                <img src="~/Content/assets/images/Slider/@Model.Image"
                                        class="img-fluid avatar-lg rounded"/>
                            </p>

                            <div class="row">
                                <div class="col-lg-12">
                                    <form method="post" enctype="multipart/form-data">

                                        <div class="mb-3">
                                            <label for="Name" class="form-label">Slider Name</label>
                                            <input type="text" id="Name" name="Name" value="@Model.Name" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label for="image" class="form-label">Slider Resmi</label>
                                            <input type="file" id="image" name="image" class="form-control">
                                        </div>

                                        <div class="mb-3">
                                            <label for="link" class="form-label">Link</label>
                                            <input type="text" id="link" name="link" value="@Model.Link" class="form-control">
                                        </div>
                                        <div class="mb-3">
                                            <label for="IsActive" class="form-label">Is Active</label>
                                            <input type="checkbox" id="IsActive" name="IsActive" class="form-check-input"
                                                   value="true" data-val="true" checked="@Model.IsActive">
                                        </div>
                                        <input type="hidden" value="@Model.Id" name="Id" id="Id" />
                                        <button type="submit" class="btn btn-dark">Save</button>

                                    </form>
                                </div> <!-- end col -->
                            </div>
                            <!-- end row-->

                        </div> <!-- end card-body -->
                    </div> <!-- end card -->
                </div><!-- end col -->
            </div>

        </div> <!-- container -->

    </div> <!-- content -->
    <!-- Footer Start -->
    <!-- end Footer -->

</div>
