@model  List< CanakkaleBlog.Models.Slider>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int i = 0;



}


<div class="content-page">
    <div class="content">

        <!-- Start Content-->
        <div class="container-fluid">

            
            <!--- end row -->


            <div class="row">
            

                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body">

                            <h4 class="mt-0 header-title">Slider Tablosu</h4>
                            <br />
                            <a href="~/AdminSlider/Create" class="btn btn-dark mb-4">Slider ekle</a>
                            <br />
                            <div class="table-responsive">
                                <table class="table mb-1">
                                    <thead class="table-dark">
                                        <tr>
                                            <th>#</th>
                                            <th>Name</th>
                                            <th>Link</th>
                                            <th>Is Active</th>
                                            <th>Resim</th>
                                            <th>Setting</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Count == 0)
                                        {

                                            <tr>
                                                <td colspan="5">Slider bulunmamakdadır.</td>
                                            </tr>
                                        }
                                        else
                                        {
                                            foreach (var item in Model)
                                            {
                                                i++;
                                                <tr>
                                                    <th scope="row">@i</th>
                                                    <td>@item.Name</td>
                                                    <td>@item.Link</td>
                                                    <td><input type="checkbox" class="form-check-input"  checked="@item.IsActive"
                                                               value="true" data-val="true" disabled="true"/></td>
                                                    <td><img src="~/Content/assets/images/Slider/@item.Image" class="avatar-xs img-fluid rounded"  /></td>
                                                    <td >
                                                        <a href="~/AdminSlider/Edit/@item.Id" class="fe-edit "></a>
                                                        
                                                        &nbsp;|&nbsp;
                                                        <a href="~/AdminSlider/Delete/@item.Id" class="fe-trash-2 "></a>
                                                    </td>
                                                </tr>
                                            }


                                        }
                                    </tbody>
                                </table>
                            </div>

                        </div>
                    </div>


                </div>
            </div>
  

        </div> <!-- container-fluid -->
    </div> <!-- content -->
    <!-- Footer Start -->

    <!-- end Footer -->

</div>

